{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Frontend (Blazor WebAssembly)",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/Frontend",
            "url": "https://localhost:7227",
            "webRoot": "${workspaceFolder}/src/Frontend/wwwroot",
            "browser": "edge"
        },
        {
            "name": "Launch WebApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-webapi",
            "program": "${workspaceFolder}/src/WebApi/bin/Debug/net10.0/WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/WebApi",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch WebApi2",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-webapi2",
            "program": "${workspaceFolder}/src/WebApi2/bin/Debug/net10.0/WebApi2.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/WebApi2",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ],
    "compounds": [
        {
            "name": "Launch All Sites",
            "configurations": [
                "Launch WebApi",
                "Launch WebApi2",
                "Launch Frontend (Blazor WebAssembly)"
            ],
            "stopAll": true
        }
    ]
}